#include <stdio.h>

int main() {
    int n1, n2, i, j;
    int arr1[50], arr2[50], merged[100];

    // Input first array
    printf("Enter size of first array: ");
    scanf("%d", &n1);
    printf("Enter elements of first array:\n");
    for(i = 0; i < n1; i++) {
        scanf("%d", &arr1[i]);
    }

    // Input second array
    printf("Enter size of second array: ");
    scanf("%d", &n2);
    printf("Enter elements of second array:\n");
    for(i = 0; i < n2; i++) {
        scanf("%d", &arr2[i]);
    }

    // Copy elements of arr1 into merged
    for(i = 0; i < n1; i++) {
        merged[i] = arr1[i];
    }

    // Copy elements of arr2 into merged
    for(j = 0; j < n2; j++) {
        merged[i] = arr2[j];
        i++;
    }

    // Print merged array
    printf("Merged Array: ");
    for(i = 0; i < n1 + n2; i++) {
        printf("%d ", merged[i]);
    }

    return 0;
}
