#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int i, balance = 0;

    printf("Enter a string with parentheses: ");
    scanf("%s", str);

    for(i = 0; str[i] != '\0'; i++) {
        if(str[i] == '(')
            balance++;
        else if(str[i] == ')')
            balance--;

        if(balance < 0) break; // more ')' than '('
    }

    if(balance == 0)
        printf("Valid string: parentheses are balanced\n");
    else
        printf("Invalid string: parentheses are not balanced\n");

    return 0;
}
