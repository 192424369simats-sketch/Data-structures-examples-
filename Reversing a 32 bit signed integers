#include <stdio.h>
#include <limits.h>

int reverse(int x) {
    long rev = 0;  // use long to detect overflow
    while (x != 0) {
        int digit = x % 10;
        rev = rev * 10 + digit;
        if (rev > INT_MAX || rev < INT_MIN) {
            return 0;  // overflow
        }
        x /= 10;
    }
    return (int)rev;
}

int main() {
    int n;
    printf("Enter a number: ");
    scanf("%d", &n);

    int result = reverse(n);
    printf("Reversed number: %d\n", result);

    return 0;
}
